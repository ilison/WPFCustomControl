                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Syncfusion.UI.Xaml.Grid">    
   
    <Style TargetType="local:ProgressRing" x:Key="ProgressRingStyle">
